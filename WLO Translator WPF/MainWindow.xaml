        <Button x:Name="ButtonClose" VerticalAlignment="Top" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" Padding="0" Click="ButtonClose_Click" WindowChrome.IsHitTestVisibleInChrome="True">
