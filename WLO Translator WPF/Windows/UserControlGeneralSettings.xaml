<UserControl x:Class="WLO_Translator_WPF.UserControlGeneralSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WLO_Translator_WPF"
             mc:Ignorable="d" Width="387" Height="75" HorizontalAlignment="Left" Margin="0">
    <Grid>
        <GroupBox x:Name="GroupBoxThemeSettings" Header="Theme Settings">
            <Grid>
                <Label x:Name="LabelSetTheme" Content="Set Theme:" Margin="10,12,0,11" Height="29" HorizontalAlignment="Left" Width="72"/>
                <ComboBox x:Name="ComboBoxThemes" HorizontalAlignment="Left" Margin="82,16,0,16" Text="1000" Width="266" Height="20" VerticalAlignment="Center" SelectionChanged="ComboBoxThemes_SelectionChanged">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="White"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
